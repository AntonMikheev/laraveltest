{% extends 'AppGrabberBundle:Layouts:admin.layout.html.twig' %}
{% block header_search %} {% endblock %}
{% block content %}


    {% if error %}
        <div class="alert alert-warning">{{ error.message }}</div>
    {% endif %}

    <form class="form-signin" role="form" action="{{ path('admin_security_check') }}" method="post">

        <input type="text" class="form-control" placeholder="User name" required="" autofocus="" name="_username" value="{{ last_username }}">
        <input type="password" class="form-control" placeholder="Password" required="" name="_password">
        <label class="checkbox">
            <input type="checkbox" value="remember-me" id="remember_me" name="_remember_me"> Remember me
        </label>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>


{% endblock %}